<div class="row">
  <div class="col md-6 text-center">
    <p id="notice"><%= notice %></p>

  <h1>Internationals</h1>
  <div>
    <%= link_to 'New International', new_international_path, class: 'btn btn-sm btn-success' %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Number of friends</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @internationals.each do |international| %>
        <tr>
          <td><%= link_to international.name, international_path(international) %></td>          
          <td><%= international.country %></td>
          <td><%= international.friendships.count %></td>
          <td><%= link_to 'Add friend', friendships_create_path(:friend_id => international), method: :post, class: 'btn btn-block btn-default' %></td>
          <td><%= link_to 'Show', international, class: 'btn btn-block btn-default' %></td>
          <td><%= link_to 'Edit', edit_international_path(international), class: 'btn btn-block btn-default' %></td>
          <td><%= link_to 'Destroy', international, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-block btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  </div>
</div>


