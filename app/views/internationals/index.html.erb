<div class="container">
  <h1>Internationals</h1>
  <div class='row'>
    <div class="col-md-8">
      <table class='table table-striped table-bordered'>
        <thead>
          <tr>
            <th>Name </th>
            <th>Country </th>
            <th>Number of friends </th>
          </tr>
        </thead>

        <tbody>
          <% @internationals.each do |international| %>
            <tr>
              <td><%= link_to international.name, international_path(international) %></td>          
              <td><%= international.country_name %></td>
              <td><%= international.friendships.count %></td>
              <td><%= link_to 'Show', international, class: 'btn btn-info btn-default' %></td>
              <td><%= link_to 'Edit', edit_international_path(international), class: 'btn btn-warning btn-default' %></td>
              <td><%= link_to 'Destroy', international, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2"></div>
    <div class='col-md-2 '>
      <div class='affix text-right'>
        <%= link_to 'Add new International', new_international_path, class: 'btn btn-success btn-lg' %>
        <br>
        <br>
        <p>Number of internationals: <%= @internationals.count %></p>        
      </div>
    </div>
  </div>
</div>